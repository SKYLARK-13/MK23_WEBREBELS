<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileActivity">
    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#CCE53C35"/>

    <Button
        android:id="@+id/choosefile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select file"
        android:textSize="16sp"
        android:layout_below="@+id/textview6"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/filename1"
        android:textSize="20sp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Filename.pdf"
        android:layout_below="@+id/textview6"
        android:layout_marginTop="20dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Date"
    android:textSize="16sp"
    android:layout_below="@+id/choosefile"
    android:layout_marginLeft="10dp"
    android:id="@+id/choosedate"
    android:layout_marginTop="20dp"
    android:layout_alignParentLeft="true"
    android:textStyle="bold"
    android:textColor="#000000"/>
    <TextView
        android:id="@+id/date1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="dd/mm/yy"
        android:layout_below="@+id/choosefile"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/date1"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular_no"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/circularno1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tittle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:layout_below="@+id/circularno1"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/tittle1"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/circularno1"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to uplod"
        android:layout_below="@+id/tittle1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/uploadfile"
        android:textColor="#E90E0E"/>


</RelativeLayout>