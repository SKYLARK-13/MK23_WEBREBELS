<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:lines="4"
        android:text="We are very sad to hear that you are leaving us please tell us the reason for living, it will be increase our user experience"
        android:textColor="#233FD8"
        android:textSize="18dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textbox"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:hint="share your thoughts"
        android:lines="4"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textColor="#039BE5"
        android:textColorHint="#949696" />


    <EditText
        android:id="@+id/deletaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:hint="Enter mail"
        android:inputType="textEmailAddress"
        android:textColor="#039BE5"
        android:textColorHint="#949696"
        android:textSize="18sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/deletaccount"
        android:text="Delete Account"
        android:background="@drawable/button"
        android:id="@+id/delete"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

