<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".DeletActivity">
    <TextView
        android:id="@+id/txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Select An Option"
        android:layout_marginTop="110dp"
        android:textStyle="italic"
        android:textAlignment="textStart"
        android:lines="2"
        android:textSize="28sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <Button
        android:layout_below="@+id/txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete Notice"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:background="@drawable/button"
        android:id="@+id/deletNotice"

        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/deletNotice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#2CA7E0"
        android:textAlignment="center" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:background="@drawable/button"
        android:id="@+id/send"
        android:layout_below="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See Reports"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:background="@drawable/button"
        android:id="@+id/report"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/send"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Viewed by"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:background="@drawable/button"
        android:id="@+id/Viewedby"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/report"
        android:layout_marginTop="30dp"/>

</RelativeLayout>