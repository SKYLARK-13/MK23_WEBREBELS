<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_notification">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banking   "
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"/>
            <Button
                android:id="@+id/banking_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"
                />
            <Button
                android:id="@+id/banking_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <Button
                android:id="@+id/insurance_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
            <Button
                android:id="@+id/insurance_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pension   "
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <Button
                android:id="@+id/pension_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
            <Button
                android:id="@+id/pension_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common "
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"/>
            <Button
                android:id="@+id/common_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
            <Button
                android:id="@+id/common_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white"
                android:background="#d81b60"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

